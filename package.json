{
  "name": "platform-party",
  "version": "1.0.0",
  "description": "Multiplayer platformer",
  "scripts": {
    "server": "node dist/server.js",
    "watch": "webpack --watch",
    "build": "npm run build:server && npm run build:client",
    "build:server": "webpack",
    "build:client": "npm --prefix ./client run build",
    "postinstall": "npm --prefix ./client install && npm run build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.31.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tslib": "^2.3.0",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@types/express": "^4.17.15",
    "express": "^4.17.2",
    "socket.io": "^4.5.4"
  }
}
